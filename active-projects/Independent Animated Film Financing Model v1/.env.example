# Film Financing Navigator - Environment Configuration
# Copy this file to .env and update the values

# ================================
# Database Configuration
# ================================
POSTGRES_USER=filmfinance
POSTGRES_PASSWORD=changeme123
POSTGRES_DB=filmfinance
POSTGRES_PORT=5432

# ================================
# Backend API Configuration
# ================================
BACKEND_PORT=8000

# Database connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://filmfinance:changeme123@db:5432/filmfinance

# Secret key for JWT tokens and encryption
# IMPORTANT: Generate a secure random key for production!
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

# CORS origins (comma-separated list)
# Allow frontend to make API requests
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost"]

# Environment (development, staging, production)
ENVIRONMENT=production

# Debug mode (true/false)
DEBUG=false

# Rate limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=60

# ================================
# Frontend Configuration
# ================================
FRONTEND_PORT=3000

# API URL for frontend to connect to backend
# In production, use your domain: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# ================================
# Redis Configuration (Optional)
# ================================
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# ================================
# Production Deployment Notes
# ================================
# 1. Generate a secure SECRET_KEY
# 2. Update BACKEND_CORS_ORIGINS with your production domain
# 3. Use strong POSTGRES_PASSWORD
# 4. Set DEBUG=false
# 5. Update NEXT_PUBLIC_API_URL to your production API URL
# 6. Consider using environment-specific .env files:
#    - .env.development
#    - .env.staging
#    - .env.production
