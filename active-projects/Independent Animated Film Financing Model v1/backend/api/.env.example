# Database
DATABASE_URL=postgresql+asyncpg://filmfinance:devpassword@localhost:5432/filmfinance_db
DB_PASSWORD=devpassword

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Film Financing Navigator
VERSION=1.0.0
DESCRIPTION=Animation Film Financing Optimization Platform

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# File Upload
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT_PER_15_MIN=5

# Monitoring
SENTRY_DSN=  # Add Sentry DSN in production
ENVIRONMENT=development  # development, staging, production

# Email (for password reset - future feature)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@filmfinance.com
EMAILS_FROM_NAME=Film Financing Navigator

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
